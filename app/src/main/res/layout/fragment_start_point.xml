<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background02"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/foreground"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_marginStart="40dp"
        android:src="@drawable/background03"
        app:layout_constraintStart_toStartOf="parent" />

    <com.ladder.game.core.library.CustomImageButton
        android:id="@+id/new_game"
        android:layout_width="280dp"
        android:layout_marginBottom="10dp"
        android:layout_height="55dp"
        android:src="@drawable/newgame"
        app:layout_constraintBottom_toTopOf="@+id/coontinue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/foreground" />

    <com.ladder.game.core.library.CustomImageButton
        android:id="@+id/coontinue"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:src="@drawable/continue01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/foreground"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ladder.game.core.library.CustomImageButton
        android:id="@+id/exit"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/foreground"
        app:layout_constraintTop_toBottomOf="@+id/coontinue" />


    <TextView
        style="@style/BasicText"
        android:id="@+id/privacyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy"
        android:textColor="#0000FF"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>